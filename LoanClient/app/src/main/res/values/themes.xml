<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoanClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LoanClient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LoanClient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LoanClient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LoanClient.TableLayout" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="Theme.LoanClient.TableRow" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">#0079D6</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Theme.LoanClient.LinearLayout" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">#DAE8FC</item>
    </style>
</resources>